<h1>Mailing list</h1>

<%= link_to "Add a new entry", mailListAdd_path %>

<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>E-mail</th>
		<th>Phone Number</th>
		<th>Notes</th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.firstname %></td>
			<td><%= user.lastname %></td>
			<td><%= user.email %></td>
			<td><%= user.phone %></td>
			<td><%= user.notes %></td>
			<td><%= link_to "Edit User", mailListEdit_path(user.id) %></td>
		</tr>
	<% end %>
</table>
